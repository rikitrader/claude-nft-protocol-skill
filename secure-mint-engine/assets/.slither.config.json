{
  "filter_paths": [
    "node_modules",
    "lib",
    "test",
    "tests",
    "test/mocks",
    "test/foundry",
    "test/unit",
    "test/invariant",
    "contracts/test",
    "contracts/test/fuzzing",
    "contracts/certora"
  ],
  "exclude_dependencies": true,
  "detectors_to_exclude": [
    "naming-convention",
    "solc-version",
    "pragma",
    "dead-code",
    "too-many-digits",
    "constable-states",
    "external-function",
    "events-access",
    "boolean-equal"
  ],
  "exclude_informational": false,
  "exclude_low": false,
  "exclude_medium": false,
  "exclude_high": false,
  "exclude_optimization": true,
  "show_ignored_findings": false,
  "legacy_ast": false,
  "json": "slither-report.json",
  "sarif": "slither-report.sarif",
  "checklist": true,
  "fail_on": "high",
  "printers_to_run": [
    "contract-summary",
    "function-summary",
    "human-summary"
  ],
  "markdown_root": "https://github.com/your-org/secure-mint-engine/blob/main/",
  "compile_force_framework": "foundry",
  "solc_remaps": [
    "@openzeppelin/contracts/=lib/openzeppelin-contracts/contracts/",
    "@openzeppelin/contracts-upgradeable/=lib/openzeppelin-contracts-upgradeable/contracts/",
    "@chainlink/contracts/=lib/chainlink/contracts/",
    "forge-std/=lib/forge-std/src/",
    "ds-test/=lib/forge-std/lib/ds-test/src/"
  ],
  "solc_args": "--optimize --optimize-runs 200",
  "triage_database": ".slither-triage.json",
  "triage_mode": true
}

# SecureMintEngine Python CLI -- Environment Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ── Required ──────────────────────────────────────────────
RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
TOKEN_ADDRESS=0x...your_BackedToken_address
POLICY_ADDRESS=0x...your_SecureMintPolicy_address
CHAIN_ID=1

# ── Required for Transactions ─────────────────────────────
PRIVATE_KEY=your_private_key_here

# ── Optional (enables oracle/treasury/bridge monitoring) ──
ORACLE_ADDRESS=0x...your_oracle_address
TREASURY_ADDRESS=0x...your_treasury_address
BRIDGE_ADDRESS=0x...your_bridge_address

# ── Optional (soft preflight checks) ─────────────────────
ETHERSCAN_API_KEY=your_etherscan_api_key
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SUBGRAPH_URL=https://api.thegraph.com/subgraphs/name/your-subgraph
